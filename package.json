{
  "name": "pcf-maker",
  "version": "0.1.0",
  "description": "Desktop application for streamlining PCF development workflow",
  "main": "dist/main/index.js",
  "author": "PCF Maker Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leduc212/powerapp-pcf-maker.git"
  },
  "bugs": {
    "url": "https://github.com/leduc212/powerapp-pcf-maker/issues"
  },
  "homepage": "https://github.com/leduc212/powerapp-pcf-maker#readme",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:vite && npm run build:electron && npm run build:preload",
    "build:vite": "vite build",
    "build:electron": "tsc -p tsconfig.node.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "preview": "vite preview",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "typecheck": "tsc --noEmit",
    "test": "echo \"Tests not configured yet\" && exit 0"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@fluentui/react-components": "^9.72.10",
    "@fluentui/react-icons": "^2.0.317",
    "@hookform/resolvers": "^5.2.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-hook-form": "^7.71.1",
    "react-router-dom": "^7.13.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  }
}
